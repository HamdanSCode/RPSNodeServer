{
  "compilerOptions": {
    "target": "ES2022",
    // "lib": [
    //   "es6"
    // ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    // "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}